@model OnlineLibraryMVCApi.ViewModels.PublicationViewModel

@{
    ViewBag.Title = "PublicationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Form</h2>
@using (Html.BeginForm("Save", "Publication"))
{
    <div class="wrapper">
        <div class="forms col-sm-8">
            <div class="row">
                <div class="form-group col-sm-6">
                    @Html.LabelFor(b => b.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6">
                    @Html.LabelFor(b => b.Address)
                    @Html.TextBoxFor(b => b.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address)
                </div>
            </div>
            <div class="row">
                <div id="for-flex" class="form-group col-sm-6">
                    <button type="submit" id="btnSave" class="btn btn-primary">Save</button>
                    <button type="reset" id="btnCancel" class="btn btn-info">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {

        });
    </script>
}